<% layout("layouts/boilerplate") %>


<div class="row">
    <div class="col-6 offset-3">
        <h1>Edit Supply</h1>
        <form action="/supply/<%= store._id %>?_method=PUT" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="store[title]" id="title" value="<%= store.title %>" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="store[location]" id="location"
                value="<%= store.location %>" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Add Images</label>
                <input class="form-control" type="file" id="formFile" name="images" id="images" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="store[description]"
                id="description" required><%= store.description %></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Category</label>
                <select class="form-select" name="store[category]" id="category" required>
                    <% for(let cat of category) { %>
                    <option value="<%= Object.keys(cat) %>" <%= Object.keys(cat).toString() === store.category ?"selected" : "" %>>
                        <%= Object.keys(cat) %>
                    </option>
                    <% } %>
                </select>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <% store.images.forEach(function(img,index) { %> 
                    <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="img-<%= index %>" name="deleteImages[]" value="<%= img.filename %>">
                    </div>
                    <label for="img-<%= index %>">Delete?</label>
                <% }) %> 
            </div>
            <div class="mb-3">
                <button class="btn btn-secondary">Save</button>
            </div>
        </form>
        <a href="/supply/<%= store._id %>">Cancel</a>
    </div>
</div>
