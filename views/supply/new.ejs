<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-6 offset-3">
            <h1>New Supply </h1>
            <form action="/supply" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="store[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="store[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label" >Upload Images</label>
                    <input class="form-control" type="file" id="formFile" name="images" id="images" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="store[description]" id="description"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="category">Category</label>
                    <select class="form-select" name="store[category]" id="category">
                        <% for(let cat of category) { %>
                            <option value="<%= Object.keys(cat) %>">
                                <%= Object.keys(cat) %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <button class="btn btn-secondary">Submit</button>
                </div>
            </form>
            <a href="/supply">Cancel</a>
        </div>
    </div>